# ===========================================
# EXPENSE MANAGEMENT SYSTEM - FRONTEND CONFIG
# ===========================================

# ------------------- BACKEND API -------------------
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_API_TIMEOUT=10000

# ------------------- CLIENT-SIDE SERVICES -------------------
# Google Vision API (if using client-side OCR)
NEXT_PUBLIC_GOOGLE_VISION_API_KEY=your_google_vision_api_key

# ------------------- CURRENCY & COUNTRIES -------------------
# REST Countries API (Free - No API key required)
NEXT_PUBLIC_COUNTRIES_API_URL=https://restcountries.com/v3.1/all?fields=name,currencies
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_SUPPORTED_CURRENCIES=USD,EUR,GBP,INR,CAD,AUD,JPY,CNY,SGD,AED
NEXT_PUBLIC_CURRENCY_REFRESH_INTERVAL=3600000  # 1 hour in ms

# Currency Conversion API (Free - No API key required)
NEXT_PUBLIC_EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest
NEXT_PUBLIC_CURRENCY_DECIMAL_PLACES=2
NEXT_PUBLIC_ENABLE_REAL_TIME_CONVERSION=true

# ------------------- UI CONFIGURATION -------------------
NEXT_PUBLIC_APP_NAME=Expense Management System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=Your Company Name

# ------------------- FEATURES FLAGS -------------------
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_CURRENCY_CONVERSION=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# ------------------- FILE UPLOAD -------------------
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ------------------- ANALYTICS (Optional) -------------------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_tracking_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# ------------------- DEVELOPMENT -------------------
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug